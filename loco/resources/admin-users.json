{
  "name": "admin-users",
  "label": "Users",
  "primary": ["uuid"],
  "softDelete": true,
  "meta": {
    "table": "users"
  },
  "mixins": ["datetime-in-resource.json"],
  "attributes": {
    "uuid": {
      "label": "UUID",
      "operations": {
        "create": {
          "generate": "uuid",
          "validate": [{ "type": "uuid" }]
        },
        "update": {
          "validate": [
            { "type": "required" },
            {
              "type": "exists",
              "table": "topics",
              "column": "uuid"
            }
          ]
        }
      },
      "ui": {
        "detail": {
          "display": true
        }
      }
    },
    "password": {
      "label": "Password",
      "operations": {
        "create": {
          "validate": [{ "type": "required" }]
        }
      },
      "ui": {}
    },
    "profile": {
      "label": "Profile",
      "operations": {},
      "ui": {
        "detail": {
          "display": true
        }
      }
    },
    "attributes": {
      "label": "Attributes",
      "relation": {
        "localKey": "uuid",
        "foreignKey": "user_uuid",
        "type": "has_many",
        "resource": "admin-attributes"
      }
    }
  },
  "filterBy": {
    "attribute": {
      "localKey": "users.uuid",
      "operation": "in",
      "transformations": [
        {
          "operation": "like",
          "resource": "attributes",
          "findByKey": "value",
          "findByValue": "attribute",
          "extract": "user_uuid"
        }
      ]
    }
  }
}
